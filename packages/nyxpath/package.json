      "require": "./dist/utils.cjs"
    }
  },
  "scripts": {
    "prepack": "nyxr build",
    "release": "nyxr test && pnpm publish",
    "build": "unbuild",
    "dev": "vitest",
    "lint": "eslint --ext .ts .",
    "changelog": "nyxlx changelogen --output",
    "test": "nyxr lint && vitest run --coverage",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@codeboost/tsconfig": "workspace:*",
    "typescript": "^5.0.4"
  },
  "files": [
