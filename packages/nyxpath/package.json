    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.cjs"
    }
  },
  "scripts": {
    "prepublishOnly": "nyxr build",
    "release": "pnpm vitest run && standard-version && pnpm publish",
    "build": "unbuild",
    "dev": "vitest",
    "lint": "eslint --ext .ts .",
    "test": "nyxr lint && vitest run --coverage",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@nyxcfg/tsconfig": "workspace:*",
    "standard-version": "latest",
    "typescript": "^5.0.4"
